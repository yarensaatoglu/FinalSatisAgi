@model IEnumerable<FinalSatisAgi.Models.Entity.URUN>
@{
    ViewBag.Title = "Urunler";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

<h2>ÜRÜNLER</h2>

<div class="w_content">
    <div class="women">
        <a href="#"><h4>@Html.ActionLink("Yeni Ürün Ekle", "YeniUrun")</h4></a>
    </div>
    <div class="women_main">
        <div class="row">
            @foreach (var item in Model)
            {

                <div class="grid1_of_4">
                    <div class="content_box" s>
                        <h4>@Html.DisplayFor(modelItem => item.urun_ad)</h4>
                        <img src="~/Resim/resim.jpg" class="img-responsive" alt="">
                        <div class="grid_1 simpleCart_shelfItem">

                            <h6>@Html.DisplayFor(modelItem => item.urun_fiyat) TL</h6>
                            <h6>@Html.DisplayFor(modelItem => item.urun_kisa_aciklama)</h6>
                            
                            <a href="#">
                                @Html.ActionLink("Ürün Detayı", "UrunDetay", new { id = item.urun_id }) | @Html.ActionLink("Düzenle", "UrunDuzenle", new { id = item.urun_id }) |
                                @Html.ActionLink("Sil", "UrunSil", new { id = item.urun_id })
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

