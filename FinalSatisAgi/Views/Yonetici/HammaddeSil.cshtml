@model FinalSatisAgi.Models.Entity.HAMMADDE
@{
    ViewBag.Title = "HammaddeSil";
    Layout = "~/Views/Shared/_YoneticiLayout.cshtml";
}

<h2>HAMMADDE SİL</h2>

<h3>Silmek istediğinize emin misiniz ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <label>Hammadde Adı:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hammadde_ad)
        </dd>

        <dt>
           <label>Hammadde Stok Sayısı:</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hammadde_stok)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sil" class="btn btn-default" /> |
            @Html.ActionLink("Listeye Geri Dön", "Hammadde")
        </div>
    }
</div>

